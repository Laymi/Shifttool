template(name='Individual')
  #home
    h4 Shifts for {{first_name}} {{last_name}}
    br
    if shifts
      table
        thead
          tr
            th ID
            th Supervisor
            th Supervisor Contact
            th Location
            th Start
            th End
            th Info
        each shifts
          tbody
            tr
              if currentUserIsThisStudent
                td 
                  a(id="listShiftForExchange", name="{{_id}}") CHANGE
                  {{_id}}
              else
                td {{_id}}
              td {{info.supervisor}}
              td {{info.supervisorContact}}
              td {{info.location}}
              td {{formatDate info.start}}
              td {{formatDate info.end}}
              td {{info.info}}
